start: statement+

statement: expr -> expr
    | assign

expr: expr "+" term -> add
    | expr "-" term -> sub
    | term

term: term "*" factor -> mul
    | term "/" factor -> div
    | factor

factor: NUMBER -> num
    | "(" expr ")"
    | "-" factor -> neg
    | IDENTIFIER -> var

assign: IDENTIFIER "=" expr -> assign

COMMENT: /\/\/[^\n]*/

IDENTIFIER: LETTER (LETTER | DIGIT)*

%import common.NUMBER
%import common.LETTER
%import common.DIGIT
%import common.WS
%ignore WS
%ignore COMMENT